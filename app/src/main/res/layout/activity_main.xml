<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

<EditText
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/testlatitude"
    android:layout_marginTop="5sp"
    android:inputType="number"
    android:hint="latitude"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testlatitude"
        android:layout_marginTop="5sp"
        android:id="@+id/testlongitude"
        android:hint="longitude"
        android:gravity="center_horizontal"
        android:inputType="number"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/testlongitude"
        android:layout_centerHorizontal="true"
        android:text="Calculate distance"
        android:id="@+id/bcalculate"
        android:clickable="false"
        android:onClick="calculate"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/coordinates"
        android:text="coordinates here"
        android:gravity="center_horizontal"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/coordinates"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:text="address here"
        android:textSize="20sp" />


</RelativeLayout>